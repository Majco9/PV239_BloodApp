<Application
    x:Class="BloodApp.UI.Uwp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BloodApp.UI.Uwp"
    xmlns:system="using:System"
    xmlns:converters="using:BloodApp.UI.Uwp.Converters"
    RequestedTheme="Light">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Default">
					<SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="DarkRed"/>
					<!--<SolidColorBrush x:Key="SystemControlHighlightChromeAltLowBrush" Color="IndianRed"/>-->
					<SolidColorBrush x:Key="SystemControlHighlightChromeAltLowBrush" Color="DarkGray"/>
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
			
			<converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
			
		</ResourceDictionary>
	</Application.Resources>

</Application>
